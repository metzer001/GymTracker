@model IEnumerable<GymTracker.ViewModel.MemberViewModel>

@{
    ViewData["Title"] = "Details";
}

@Html.Partial("_Message")

<h2>Details</h2>

@foreach (var item in Model)
{

    <div>
        <h4>Member</h4>
        <hr />
        <dl class="dl-horizontal">



            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.FirstName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.LastName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.DateOfBirth)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.PaymentType)
            </dt>
            <dd>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Edit" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MemberID">Edit</a> |
        <a asp-action="BookClass" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MemberID">Book Class</a>
        <a asp-action="CancelClass" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MemberID">Cancel Class</a>
        <a asp-action="Index" class="btn btn-primary btn-lg margin-right">Back to List</a>
    </div>
}
