
@model IEnumerable<GymTracker.ViewModel.MemberClassBookedViewModel>

@{
    ViewData["Title"] = "Details";
}



<h2>Details</h2>

@foreach (var item in Model)
{


    <div>
        <h4>Classes</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ClassName)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.ClassName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ClassSize)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.ClassSize)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.NumberOfBookings)
            </dt>
            <dd>
                @Html.DisplayFor(model => item.NumberOfBookings)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.MemberIDs)
            </dt>

            @foreach (var x in item.MemberIDs)
            {

                <dd>
                    @Html.DisplayFor(model => x)
                </dd>


            }



        </dl>
    </div>

    <div>
        <a asp-action="Edit" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.ClassId">Edit</a> |
        <a asp-action="Index" class="btn btn-primary btn-lg margin-right">Back to List</a>
    </div>

}

