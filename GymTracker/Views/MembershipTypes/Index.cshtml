@model IEnumerable<GymTracker.Models.MembershipType>

@{
    ViewData["Title"] = "Index";
}
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.PaymentType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Cost)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MembershipTypeId">Edit</a> |
                <a asp-action="Details" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MembershipTypeId">Details</a> |
                <a asp-action="Delete" class="btn btn-primary btn-lg margin-right" asp-route-id="@item.MembershipTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>


<script>
    $(document).ready(function () {
        $('h2').hover(function () {

            $(this).css("color", "red");

        });


        $("tr").not(':first').hover(
            function () {
                $(this).css("background", "grey");
            },
            function () {
                $(this).css("background", "");
            }
        );


    });

</script>